{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@tinkoff-tt/backend/*": ["./src/*"],
      "@tinkoff-tt/common/*": ["./../common/*"]
    }
  },
  "exclude": ["node_modules"]
}
